<style>
body {
  background-color: rgb(192, 213, 231)
}
.topnav {
  overflow: hidden;
  background-color: #e9e9e9;
}
.topnav a {
  float:inline-start;
  display: block;
  color: black;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}
.topnav a.active {
  background-color: #2196F3;
  color: white;
}
.topnav .login-container {
  float: right;
}
.topnav .login-container button {
  display: flex;
  align-content: flex-end;
  float: right;
  padding: 6px 6px;
  margin-top: 8px;
  margin-right: 16px;
  border-radius: 15px;
  background-color: rgb(153, 216, 179);
  color: white;
  font-size: 17px;
  border: none;
  cursor: pointer;
}
.topnav .login-container button:hover {
  background-color: green;
}
@media screen and (max-width: 600px) {
  .topnav .login-container {
    float: none;
  }
  .topnav a, .topnav input[type=text], .topnav .login-container button {
    float: none;
    display: block;
    text-align: left;
    width: 100%;
    margin: 0;
    padding: 14px;
  }
} 
</style>
<% if(user){ %> 
<form action="/logout", method="POST"> 
<div class="topnav">
    <a class="active">Welcome to TinyApp! Your email is  <%= user.email%> </a>
        <div class="login-container">
            <button type="submit" style="width: 100px">Logout</button>
        </div>
</div>
</form>
<br>
<h1>TinyApp </h1>
<br>
<br>
<% } else {%>
<div class="topnav">
    <a class="active">Please register or login! </a>
    <div class="login-container">
        <button type="submit">
            <a href="/register">Register</a>
          </button>
      <button type="submit">
        <a href="/login">Login</a>
      </button>
    </div>
</div>
<% } %>

